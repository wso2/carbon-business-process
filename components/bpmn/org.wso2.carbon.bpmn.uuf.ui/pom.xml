<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.wso2.carbon.business-process</groupId>
    <artifactId>org.wso2.carbon.bpmn.uuf.ui</artifactId>
    <version>5.0.0-SNAPSHOT</version>

    <properties>
        <import.package>
            org.wso2.carbon.*
        </import.package>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.wso2.uuf</groupId>
            <artifactId>org.wso2.uuf.base</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.is</groupId>
            <artifactId>org.wso2.is.uuf.basicauth</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.store</groupId>
            <artifactId>org.wso2.store.ui.store-common</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.uuf</groupId>
            <artifactId>org.wso2.uuf.theme.blue</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.carbon.maven</groupId>
                <artifactId>carbon-uuf-maven-plugin</artifactId>
                <version>1.0.0-m3</version>
                <executions>
                    <execution>
                        <id>create</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-application</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    
</project>