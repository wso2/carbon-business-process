<div class="row">
        <div class="col-md-12">
                <!-- content -->
               	<div class="container col-xs-10 col-sm-6 col-md-6 col-lg-4 col-centered wr-content wr-login col-centered">
                    <div>
                          <h2 class="wr-title uppercase dark-red-bg padding-double white boarder-bottom-blue margin-none"><%=i18n.localize("sign.in", "Sign in")%></h2>
                    </div>
                        <div class="boarder-all">
                            <div class="clear"></div>
                        <h3 class="padding-double float-left"><%=i18n.localize("sign.in.to.continue", "Sign in to continue")%></h3>
                    <!-- validation -->
					<form method="POST" action="auth">
                        <div class="wr-input-control padding-double">
                          <input name="username" autocomplete="off" type="text" class="form-control" placeholder='<%=i18n.localize("user.name", "Username")%>' autofocus/>
                            <br>
                           <input name="password" autocomplete="off" type="password" class="form-control" placeholder='<%=i18n.localize("password", "Password")%>'/>
                        </div>

                        <div class="wr-input-control padding-bottom-double padding-left-double padding-right-double">
                        <% if (isPrivacyPolicyEnabled) { %>
                            <div class="alert alert-warning" role="alert"><%=i18n.localize("cookie.policy", "Cookie Policy")%>
                            <a href="<%=privacyPolicyLink%>"><%=i18n.localize("cookie.policy.link.label", "Cookie Policy Link")%></a>.
                            </div>
                        <% } %>
                        <% if (message != "") { %>
                                <div class="alert alert-danger" role="alert"><%=message%></div>
                            <% } %>
                            <button class="wr-btn grey-bg col-xs-12 col-md-12 col-lg-12 uppercase font-extra-large"  type="submit"><%=i18n.localize("login", "Login")%></button>
                            </div>
                            </form>
                        </div>
                </div>
    	</div>
</div>
